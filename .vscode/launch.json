{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "protocol": "inspector",
      "name": "Mocha Tests",
      "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
      "args": ["--opts", "mocha.opts", "--timeout", "999999"],
      "internalConsoleOptions": "openOnSessionStart"
    },
    {
      "name": "Attach to Node.js Debugger",
      "type": "node",
      "request": "attach",
      "protocol": "inspector",
      "restart": true,
      "localRoot": "${workspaceRoot}"
    }
  ]
}
